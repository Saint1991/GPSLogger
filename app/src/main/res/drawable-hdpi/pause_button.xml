<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <layer-list>
            <item android:drawable="@drawable/red_default_button_template"/>
            <item
                android:drawable="@drawable/pause"
                android:top="@dimen/player_button_padding"
                android:left="@dimen/player_button_padding"
                android:bottom="@dimen/player_button_padding"
                android:right="@dimen/player_button_padding"/>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/red_default_button_clicked_template"/>
            <item
                android:drawable="@drawable/pause"
                android:top="@dimen/player_button_padding"
                android:left="@dimen/player_button_padding"
                android:bottom="@dimen/player_button_padding"
                android:right="@dimen/player_button_padding"/>
        </layer-list>
    </item>

</selector>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="geologger.saints.com.geologger.activities.PoiConfirmationActivity$PlaceholderFragment"
    android:id="@+id/container"
    style="@style/root_layout"
    android:orientation="vertical">

    <fragment
        class="geologger.saints.com.geologger.uicomponents.PoiListFragment_"
        android:name="geologger.saints.com.geologger.uicomponents.PoiListFragment_"
        android:id="@+id/poi_candidates"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            style="@style/default_text"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/not_found"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/button_to_free_form"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@drawable/default_button"
            android:text="@string/free_form"
            android:textSize="20sp"/>

    </LinearLayout>

</LinearLayout>
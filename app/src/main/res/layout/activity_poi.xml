<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="geologger.saints.com.geologger.activities.PoiActivity"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/search_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/search_text"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:hint="@string/poi_search_hint"
                android:background="@color/white"
                android:layout_marginRight="6dp"
                android:padding="5dp"
                android:textSize="20sp"
                android:fontFamily="Meiryo"/>

            <Button
                android:id="@+id/search_submit"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/app_color"
                android:text="@string/send"
                android:textSize="20sp"
                android:fontFamily="Meiryo"
                android:textColor="@color/white"/>

        </LinearLayout>


        <fragment
            class="geologger.saints.com.geologger.uicomponents.PoiListFragment_"
            android:name="geologger.saints.com.geologger.uicomponents.PoiListFlagment_"
            android:id="@+id/poi_search_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"/>

    </LinearLayout>

</RelativeLayout>
